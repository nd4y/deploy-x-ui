---
version: "3.3"

services:
  xui:
    image: {{ image_path }}
    container_name: x-ui
    hostname: yourhostname
    volumes:
      - {{ install_dir }}/db/:/etc/x-ui/
      - {{ install_dir }}/cert/:/root/cert/
    environment:
      XRAY_VMESS_AEAD_FORCED: "false"
    tty: true
    network_mode: host
    restart: unless-stopped
